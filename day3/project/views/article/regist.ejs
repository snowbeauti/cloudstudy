

            <!--우측 콘텐츠 헤더영역 -->
            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>게시글등록</h2>
                    <ol class="breadcrumb">
                        <li>
                            <a href="/Home/Index">Home</a>
                        </li>
                        <li>
                            <a>게시글관리</a>
                        </li>
                        <li class="active">
                            <strong>등록</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2">

                </div>
            </div>

            <!--우측 콘텐츠 영역 -->
            <div class="wrapper wrapper-content">
                <div class="ibox-content m-b-sm border-bottom">
                    <form method="post" action="/article/regist" onsubmit="return fnSave()"> 
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">글제목</label>
                                    <input type="text" id="title" name="title" class="form-control" value="<%=title%>">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label class="control-label">내용</label>
                                    <textarea id="content" name="content" class="form-control" rows="10" cols="5"><%=content%></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">작성자</label>
                                    <input id="writer" name="writer" value="<%=writer%>" type="text" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">공개여부</label>
                                    <select id="display" name="display" class="form-control">
                                        <option value="1" <% if(display == true){ %> selected <% } %>>공개</option>
                                        <option value="0" <% if(display == false){ %> selected <% } %>>비공개</option>
                                     </select>
                                </div>
                            </div>

                            <div class="col-sm-4">
                                <div class="form-group">
                                    <label class="control-label">작성일자</label>
                                    <input type="text"  value="<%=registDate%>" id="registDate" class="form-control">
                                </div>
                            </div>

                        </div>

                        <div class="text-center">
                            <input type="submit" class="btn btn-primary" value="저장"/>
                            <a href="/article/list" class="btn btn-info">목록</a>
                        </div>
                    </form>
                </div>
            </div>


            <script>

                //게시글 정보 유효성 검사 함수
                function fnSave(){
                    if(document.getElementById("title").value == ""){
                        alert("글제목을 입력해주세요.")
                        document.getElementById("title").focus()
                        return false;
                    }
                    

                    if(document.getElementById("content").value == ""){
                        alert("글내용을 입력해주세요.")
                        document.getElementById("content").focus()
                        return false;
                    }

                    if(document.getElementById("writer").value == ""){
                        alert("작성자를 입력해주세요.")
                        document.getElementById("writer").focus()
                        return false;
                    }

                    return true;

                }

            </script>
